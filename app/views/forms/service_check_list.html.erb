<div id = "all">
	<div id = "title"><p><center>SERVICE CHECK LIST #</center></p>

		<p><center>Date of Call: <textarea></textarea></center></p>
	</div>

	<div id = "body">
		<p><div id= "left">Customer Name: <%= @customer.first_name << " " << @customer.last_name %></div>

			<div id = "right"> Language: <%= @customer.language %></p>
				Central Station #: <%= @customer.client_central_station_account_number %></div>
				<p>
					Address: 

						<% @customer.addresses.each do |address| %>
						<div id= "left">
							<%= address.address_1<<" "<<address.address_2<<" "<<address.city<<" "<<address.state<<" "<<address.zip %> </div>
						<p><div id= "left">Phone #:<%= address.phone %>; <%= address.phone_2%></div></p>

						<% end %>
					</p>


					<p><div id = "left">System: <%= @customer.system.lock_number  if @customer.system %></div>
						<center>Batt: <%= @customer.system.battery_date if @customer.system%></center>
