<!-- System type show page -->
<!-- Consider changing hard coded types to attributes calls -->
<h1><%= @sys_t.system_type %></h1>
<%= link_to "Edit System name", edit_system_type_path(@sys_t) %>
<%= link_to "Destroy this system type", system_type_path(@sys_t), method: :delete, data: {confirm: "Are you sure? This will also delete all related systems."} %>

<!-- Consider making partial for system table -->

<table>	
<tr>
	<td>Customer </td>
	<td>Account Number </td>
	<td>System type</td>
	<td>Transmitter type</td>
	<td>Lock Number</td>
	<td>Test Call Number</td>
	<td>Battery Date</td>
	<td>Transmitter Date</td>
</tr>
<% @sys_t.systems.each do |s| %>
<tr>
	<td> <%= link_to [s.customer.first_name, s.customer.last_name].join(' '), customer_path(s.customer) %></td>
	<td> <%= s.customer.client_central_station_account_number %></td>
	<td> <%= s.system_type.system_type %></td>
	<td> <%= s.transmitter_type.transmitter_type %></td>

	<td> <%= s.lock_number || "empty" %> </td>
    <td> <%= s.test_call_number || "empty" %> </td>
    <td> <%= s.battery_date || "empty" %> </td>
    <td> <%= s.transmitter_date || "empty" %> </td>
</tr>
<% end %>

</table>