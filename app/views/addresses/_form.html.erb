<!-- Form for creating a new address -->
<%= link_to "Back to Customers", customers_path %>


<%= form_for @address, url: {action: action}, html: {class: "nifty_form"} do |f| %>
  <ul>
  <li><%= f.label :address_1 %>
  <%= f.text_field :address_1 %></li>
   <li><%= f.label :address_2 %>
  <%= f.text_field :address_2 %></li>
  <li><%= f.label :city %>
  <%= f.text_field :city %></li>
  <li><%= f.label :state %>
  <%= f.text_field :state %></li>
  <li><%= f.label :zip %>
  <%= f.text_field :zip %></li>
 <li> <%= f.label :phone %>
  <%= f.telephone_field :phone %></li>
  <li> <%= f.label :phone_2 %>
  <%= f.telephone_field :phone_2 %></li>
  <li><%= f.label :is_billing_address %>
  <%= f.check_box (:is_billing_address) %></li>
</ul>

  <%= f.submit action.titleize %>
<% end %>
